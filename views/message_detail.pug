extends layout
block content
    h1=title
    form(class = 'form-horizontal' method='POST' action='')
        div(class='row')
            div(class='col-sm-4' style="background-color: #dedef8;box-shadow: inset 1px -1px 1px #444, inset -1px 1px 1px #444;")
                    div.form-group
                        label(for="require_name" class="col-sm-4" )   申請する人
                            h3  #{theRelationship.user.name} 
                    div.form-group
                        label(for="sex" class="col-sm-4")    性別
                            h3  #{theRelationship.user.sex}
                    div.form-group        
                        label(for="type" class="col-sm-4")    タイプ
                            h3  #{theRelationship.rela_type}
            div(class='col-sm-1' )
            div(class='col-sm-6' style="background-color: #dedef8;box-shadow: inset 1px -1px 1px #444, inset -1px 1px 1px #444;")
                div(class='row')
                    div(class="col-md-12" style="background-color: #E0E0FA; box-shadow: inset 1px -1px 1px #444, inset -1px 1px 1px #444;")
                        div.form-group        
                            label(for="message" class="col-sm-10")    メッセージ
                                h3(style="white-space: pre-line;")  #{theRelationship.message} 
                        div.form-group   
                            label(for="refuse_message" class="col-sm-4")  新しいメッセージ
                                textarea.form-control(name="refuse_message", cols="10", rows="3" style="white-space: pre-line;")          
                div(class='row')
                    div(class="col-md-12" style="background-color: #E0E0FA; box-shadow: inset 1px -1px 1px #444, inset -1px 1px 1px #444;")
                        button.btn.btn-primary(type='submit') 送信
                        if errors 
                            ul
                            for error in errors
                                li!= error.msg 
        