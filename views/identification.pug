extends layout
block content
    h1= title
    form(class = 'form' action="/catalog/user/identification" method="post" enctype="multipart/form-data")
        div(class="row")
            div(class='col-sm-10')
                div.form-group
                    div.col-sm-6
                        img(class="img"  src=show_url alt="Photo" width="100%" height="100%")
                        input(type="file" id="file_input" accept="image/*" name="ful_avatar")
                    hr
                    div.col-sm-3(class="upload-input")
                        button.btn.btn-default(type="submit" class="upload-btn" id="upload_btn")    submit                      
                            script.
                                $("#file_input").on("change", function () {
                                    let filePath = $(this).val();
                                    if (filePath !== "") {
                                        $("#upload_btn").show();
                                    }
                                });