extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Supply:
      input#name.form-control(type='text', placeholder='Supply name' name='name' 
                               value=(undefined===supply ? '' : supply.supply_name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg